@model List<Producto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Productos registrados</h1>
    
    <table class="table">
        <tr>
            <th>ID</th>
            <th>NombreProducto</th>
            <th>URL</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Celular</th>
            <th>Lugar</th>
            <th>NombreUsuario</th>
        </tr>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Url</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>@producto.Celular</td>
                <td>@producto.Lugar</td>
                <td>@producto.NombreUsuario</td>

            </tr>
        }

    </table>
</div>
