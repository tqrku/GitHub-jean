@model Producto

<h1>Registro de Productos</h1>

<div asp-validation-summary="All"></div>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input type="text" asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Url"></label>
        <input type="text" asp-for="Url" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input type="number" asp-for="Precio" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Celular"></label>
        <input type="text" asp-for="Celular" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Lugar"></label>
        <input type="text" asp-for="Lugar" class="form-control">
    </div>
     <div class="form-group">
        <label asp-for="NombreUsuario"></label>
        
        <input type="text" asp-for="NombreUsuario" class="form-control">
    </div>

    <button class="btn btn-warning">Registrar</button>

</form>
